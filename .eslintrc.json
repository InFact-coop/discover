{
  "extends": ["esnext", "node", "plugin:react/recommended", "prettier"],
  "plugins": ["babel"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
    "react/react-in-jsx-scope": 0,
    "no-invalid-this": 0,
    "babel/no-invalid-this": 0,
    "no-use-before-define": ["error", { "variables": false }],
    "import/no-commonjs": 0,
    "import/no-nodejs-modules": 0,
    "no-use-before-define": 0,
    "class-methods-use-this": [
      "error",
      { "exceptMethods": ["componentWillUnmount", "componentDidMount"] }
    ]
  }
}
